<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_margin="16dp"
    android:layout_marginTop="32dp"
    android:background="@color/white"
    android:gravity="center">



    <ImageView
        android:id="@+id/about_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginBottom="2dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_tellme_doc"/>

    <TextView
        android:id="@+id/about_logo_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:textSize="20sp"
        android:text="Tell Me Doctor" />

    <TextView

        android:id="@+id/about_logo_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_logo_label1"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:text="Version 0.1 Beta"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/about_logo_label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_below="@id/about_logo_label2"
        android:layout_marginBottom="16dp"
        android:text="@string/patent"
        android:textSize="12dp" />

</RelativeLayout>
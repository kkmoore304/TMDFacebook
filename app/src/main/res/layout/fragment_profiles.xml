<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tellmedoctor.tmdfacebook.ui.fragments.ProfilesFragment">

    <LinearLayout
        android:id="@+id/chartview"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/primaryColor_500"
        android:orientation="horizontal"
        android:paddingBottom="8dp">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:tint="@color/primaryLightColor_700"
            android:src="@drawable/ic_action_face_unlock"/>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="35dp"
                android:textColor="@color/primary_text_icons"
                android:text="Kevin " />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:textColor="@color/primary_text_icons"
                android:text="Moore " />
        </LinearLayout>

    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->


</FrameLayout>

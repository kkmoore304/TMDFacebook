<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tellmedoctor.tmdfacebook.ui.fragments.QuestionFragment">


    <LinearLayout

        android:id="@+id/glucose_list_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Questions"/>
        <!-- **** Place Your Content Here **** -->
        <android.support.v7.widget.RecyclerView

            android:id="@+id/qcardlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/my_toolbar"
            android:scrollbars="vertical" />


    </LinearLayout>
    <ImageButton
        android:gravity="end"
        android:id="@+id/fab_question"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/oval_ripple_primary"
        android:clickable="true"
        android:elevation="5dp"
        android:fontFamily="sans-serif-light"
        android:soundEffectsEnabled="true"
        android:src="@drawable/ic_action_add"
        android:text="+"
        android:textColor="@color/primary_text_icons"
        android:textSize="20sp"
        android:layout_gravity="bottom|right"
        android:tint="@color/primary_text_icons"
        android:transitionName="MyTransition" />
</FrameLayout>
